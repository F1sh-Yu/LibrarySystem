<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BookDao">
    <resultMap id="bookMap" type="entity.Book">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="author" property="author"></result>
        <result column="publish" property="publish"></result>
        <result column="pages" property="pages"></result>
        <result column="price" property="price"></result>
        <association property="bookCase" javaType="entity.BookCase" select="dao.BookCaseDao.find" column="bookcaseid"></association>

    </resultMap>
    <select id="findAll" resultMap="bookMap">
        select * from book limit #{arg0},#{arg1}
    </select>

    <select id="count" resultType="int">
        select count(*) from book
    </select>

    <select id="findById" parameterType="int" resultMap="bookMap">
        select * from book where id=#{bookid}
    </select>
</mapper>