<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jason.dao.ReaderDao">
    <select id="login"  resultType="com.jason.entity.Reader">
        select * from reader where username=#{arg0} and password=#{arg1}
    </select>

    <select id="reader" parameterType="int" resultType="com.jason.entity.Reader">
        select name,tel,cardid from reader where id=#{readerid}
    </select>
</mapper>